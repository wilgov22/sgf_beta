<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=iso-8859-1" />
    <title>@ViewBag.Title</title>
    <script src="@Url.Content("~/Scripts/updated/jquery-1.7.1.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/updated/jquery-ui-1.8.18.custom.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/updated/jquery.dataTables.min.js")" type="text/javascript"></script>
    <link href="@Url.Content("~/Content/jquery.dataTables.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/demo_table_jui.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/updated/jquery-ui-1.8.20.custom.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/sgf_styles.css")" rel="stylesheet" type="text/css" />
    <link href='http://fonts.googleapis.com/css?family=Handlee' rel='stylesheet' type='text/css'>
    
    <script>
        $(function () {
            $("#accountoptions").toggle(function () {
                $("#options ul").slideDown();
            }
            , function () {
                $("#options ul").slideUp();
            }
            );

        });
    </script>

    @RenderSection("HtmlHead")
</head>
<body>
    <img id="logo" src="../../Content/images/logo.png" />

    <div id="options">
        <div id="accountoptions">
            @Html.Partial("_LogOnPartial")
        </div>

        @*@Html.Partial("_Languages")*@
        <div id="languages">
            <a href=@Url.Action("SetCulture", "Culture", new { controller = "Culture", lang = "pt-PT" }) style='text-decoration: none;'>
                <img src="../../Content/images/pt.png" style="border: 0" title=@Resources.SGFResource.FlagPortugal>
                </a>
                <a href=@Url.Action("SetCulture", "Culture", new { controller = "Culture", lang = "es-ES" }) style='text-decoration: none;'>
                <img src="../../Content/images/es.png" style="border: 0" title=@Resources.SGFResource.FlagSpain>
            </a>
            <a href=@Url.Action("SetCulture", "Culture", new { controller = "Culture", lang = "fr-FR" }) style='text-decoration: none;'>
                <img src="../../Content/images/fr.png" style="border: 0" title=@Resources.SGFResource.FlagFrance>
            </a>
            <a href=@Url.Action("SetCulture", "Culture", new { controller = "Culture", lang = "en-US" }) style='text-decoration: none;'>
                <img src="../../Content/images/usa.png" style="border: 0" title=@Resources.SGFResource.FlagUsa>
            </a>
        </div>
    </div>

    <div id="main">
        <header>
			@RenderSection("Top")
            @Html.Partial("_Navigation")    
        </header>
        <section id="content">
            @RenderBody()
		</section>
    </div>
</body>
</html>
