@model SGF.Models.AccountDataModel
@{
    ViewBag.Title = "RegisterAccountBank";
}
@section HtmlHead {
    <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
}
@section Top {
    <div id="pagetitle">@Resources.SGFResource.RegisterAccountBankPageTitle</div>
}
<h2>@Resources.SGFResource.RegisterAccountBankst1</h2>
@using (Html.BeginForm())
{

    <div>
        @{SGF.Models.AccountDataModel accountOnline = null;}
        <fieldset>
            @*<legend> @Resources.SGFResource.RegisterAccountBankst1 </legend>*@
            @{
          if (Session["accountOnline"] != null)
          {
              accountOnline = (SGF.Models.AccountDataModel)Session["accountOnline"];
          }
            }
            <div class="editor-label">
                @*@Html.LabelFor(m => m.AccountNumber)*@
                @Resources.SGFResource.DisplayAccountNumber
            </div>
            @{
                                                
          if(Request["Id"] != null)
          {
              @*  <div class="editor-label">
                    @Html.DisplayFor(m => m.Account_Number)
                </div>*@
                <div class="editor-field">
                    @Html.TextBoxFor(m => m.Account_Number, new Dictionary<string, object>() { { "readonly", "true" } })
                </div>
          }
          else
          { 
                <div class="editor-field">
                    @Html.TextBoxFor(m => m.Account_Number)
                    @Html.ValidationMessageFor(m => m.Account_Number)
                </div>
          }
            }
            <div class="editor-label">
                @*@Html.LabelFor(m => m.Account_Name)*@
                @Resources.SGFResource.DisplayAccountName
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(m => m.Account_Name)
                @Html.ValidationMessageFor(m => m.Account_Name)
            </div>
            <div class="editor-label">
                @*@Html.LabelFor(m => m.BankName)*@
                @Resources.SGFResource.DisplayBankName
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(m => m.Bank_Name)
                @Html.ValidationMessageFor(m => m.Bank_Name)
            </div>
            <div class="editor-label">
                @*@Html.LabelFor(m => m.OtherInfo)*@
                @Resources.SGFResource.DisplayOtherInfo
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(m => m.Other_Info)
                @Html.ValidationMessageFor(m => m.Other_Info)
            </div>
            <div class="editor-label">
                @*@Html.LabelFor(m => m.Balance)*@
                @Resources.SGFResource.DisplayBalance
            </div>
            <div class="editor-label">
                @Html.DisplayFor(m => m.Balance)
            </div>
            <input type="submit" value="@Resources.SGFResource.ActionSaveBankAccount"/>
        </fieldset>
    </div>
}
